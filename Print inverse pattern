Print the following-

ABCD   
BCD  
CD 
D

------------------------------------------------------------------------




#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    
    int i=1;
    
    
    
    while(i<=n){
        
   
    int j=1;
    while(j<=n-i+1){
        char a='A'+i-1;
        char b=a+j-1;
        cout<<b;
        j++;
    }
    
     int space=1;
    
    while(space<=n-i){
        cout<<" ";
        space++;
        
    }
    
    cout<<endl;
    i++;
    }
}    
    
